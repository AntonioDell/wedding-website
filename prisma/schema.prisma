generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Invitation {
  code      String           @id
  addressee Addressee?
  status    InvitationStatus @default(PENDING)
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model Addressee {
  name           String        @id
  type           AddresseeType @default(SINGLE)
  invitation     Invitation    @relation(fields: [invitationCode], references: [code])
  invitationCode String        @unique
}

enum AddresseeType {
  SINGLE
  COUPLE
  FAMILY
}

model Wedding {
  id            Int            @id @default(autoincrement())
  husbandToBe   String
  wifeToBe      String
  theme         Theme?
  location      Location?
  schedule      Schedule?
  accomodations Accomodation[]
}

model Theme {
  name        String  @id
  description String
  wedding     Wedding @relation(fields: [weddingId], references: [id])
  weddingId   Int     @unique
}

model Location {
  name        String  @id
  link        String
  description String
  address     String
  wedding     Wedding @relation(fields: [weddingId], references: [id])
  weddingId   Int     @unique
}

model Schedule {
  date      DateTime        @id
  entries   ScheduleEntry[]
  wedding   Wedding         @relation(fields: [weddingId], references: [id])
  weddingId Int             @unique
}

model ScheduleEntry {
  time         DateTime  @id
  name         String
  description  String
  schedule     Schedule? @relation(fields: [scheduleDate], references: [date])
  scheduleDate DateTime?
}

model Accomodation {
  name        String   @id
  link        String
  description String
  address     String
  wedding     Wedding? @relation(fields: [weddingId], references: [id])
  weddingId   Int      @unique
}
